{
  "include": ["./src/**/*", "./vite.config.ts"],
  "compilerOptions": {
    "strict": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "target": "es2024",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "lib": ["dom", "es2015"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "jsx": "react-jsx",
  }
}
